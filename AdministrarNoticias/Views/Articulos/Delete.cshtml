@model AdministrarNoticias.Articulo

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar artículo</h1>

<h4>¿Estas seguro que quieres eliminar eso?</h4>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Título
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-2">
            Descripción
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Autor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Autor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Url)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Url)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UrlToImage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UrlToImage)
        </dd>
        <dt class="col-sm-2">
            Fecha de publicación
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaPublicacion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contenido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contenido)
        </dd>
        <dt class="col-sm-2">
            Categoría
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria.NombreCategoria)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fuente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fuente.NombreFuente)
        </dd>
        <dt class="col-sm-2">
            País
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pais.NombrePais)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ArticuloId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>
