@model AdministrarNoticias.Categoria

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles de la categoría </h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre de la categoría
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreCategoria)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CategoriaId">Editar</a> |
    <a asp-action="Index">Volver a la lista</a>
</div>
