@model AdministrarNoticias.Paise

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar país</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PaisId" />
            <div class="form-group">
                <label asp-for="NombrePais" class="control-label">Nombre del país</label>
                <input asp-for="NombrePais" class="form-control" />
                <span asp-validation-for="NombrePais" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
